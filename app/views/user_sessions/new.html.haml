%h1 Login

= form_for @user_session, :as => :user_session, :url => user_session_path do |f|
  = @user_session.errors.full_messages if @user_session.errors.any?
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password
  = f.text_field :password
  %br
  = f.check_box :remember_me
  = f.label :remember_me
  %br
  = f.submit 'Login'
